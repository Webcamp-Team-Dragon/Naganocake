<div class="container">
  <h5 class="m-4"><span style="background-color:#eeeeee">ジャンル一覧・追加</span></h5>
</div>

<div class="container">
  <div class="row pt-4 pb-2">
    <div class="col-6">
      <table class= "table table-borderless">
        <%= form_with model: @genre, url: admin_genres_path do |f| %>
    　　<tr>
      　　　<td> <%= f.label :name, "ジャンル名" %></td>
          <td><%= f.text_field :name, class:'form-control' %></td>
          <td><%= f.submit '新規登録', class: 'btn btn-success'%></td>
  　　　　　　　<% end %>
        </tr>
      </table>
    </div>
  </div>
</div>

<div class="container">
   <div class="row pt-4">
     <div class="col-4">
      <table class="table">
        <thead class="thead-light ">
          <tr>
            <th>ジャンル</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <th><%= genre.name %></th>
              <th><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn-sm btn-success' %></th>
            </tr>
          <% end %>
        </tbody>
       </table>
     </div>
   </div>
</div>