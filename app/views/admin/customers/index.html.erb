<div class="container">
  <h4 class="m-4"><span style="background-color:#eeeeee">会員一覧</span></h4>
</div>

 <div class="container">
  <div class="row">
   <table class="table">
    <thead class=" thead-light ">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.last_name + "　"  + customer.first_name,admin_customer_path(customer.id) %></td>
          <td><%= customer.email %></td>
            <% if customer.is_active == true %>
              <td><p class=" text-success ">有効</p></td>
            <% else %>
              <td><p class=" text-secondary ">退会</p></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <%= paginate @customers %>
  </div>
</div>
