<div class="container">
  <h4 class="m-4"><span style="background-color:#eeeeee">注文履歴一覧</span></h4>
</div>
 <div class="container">
  <div class="row">
   <table class="table">
    <thead class=" thead-light ">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order.each do |order| %>
        <tr>
          <td>
            <%= link_to admin_order_path(order.id) do %>
              <%= order.created_at.in_time_zone('Tokyo').strftime("%Y/%m/%d %H:%M") %>
            <% end %>
          </td>
          <td><%= order.customer.full_name %></td>
          <td><%= order.order_details.sum(:amount) %></td>
          <td><%= order.status %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @order %>
 </div>
</div>