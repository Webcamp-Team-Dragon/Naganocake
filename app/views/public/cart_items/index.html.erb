<h3>ショッピングカート</h3>

<% if @cart_items.empty? %>
  <p>カートにはアイテムがありません。</p>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>合計</th>
        <th></th>
        <!--↑削除用-->
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td>
            <%= form_with url: public_cart_item_path(cart_item), method: :patch do |f| %>
              <%= f.select :amount, options_for_select((1..10).map { |n| [n, n] }, cart_item.amount), class: "form-control", id: "cart_item_amount_#{cart_item.id}" %>
              <%= f.submit "変更", class: "btn btn-primary" %>
            <% end %>
          </td>
          <td><%= cart_item.item.price %>円</td>
          <td><%= cart_item.item.price * cart_item.amount %>円</td>
          <td><%= link_to '削除する', public_cart_item_path(cart_item), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= button_to 'カートを空にする', destroy_all_public_cart_items_path, method: :delete, data: { confirm: '本当にカートを空にしますか？' }, class: 'btn btn-danger' %>

<%= link_to '買い物を続ける', public_items_path, class: 'btn btn-secondary' %>