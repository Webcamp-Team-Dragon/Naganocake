<div class="container">
  <div class="row">
    <%= render 'public/items/sidebar', genres: @genres %>
    <div class="col-md-10">
      <h2>商品一覧<span style="font-size:20px;">(全<%= @total_items %>件)</span></h2>
        <div class="d-flex flex-wrap">
          <% @items.each do |item| %>
          <div class="box" style="float:left; margin-right:20px;">
            <%= link_to public_item_path(item.id) do %>
              <%= image_tag url_for(item.image.variant(resize_to_limit: [100, 100])) %><br>
            <% end %>
            <p><%= link_to item.name, public_item_path(item.id) %></p>
            <p>¥<%= item.price %></p>
          </div>
          <% end %>
        </div>
        <%= paginate @items %>
    </div>
  </div>
</div>