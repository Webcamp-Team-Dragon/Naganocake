<h1>注文履歴 詳細</h1>

<%# if @order.present? %>
  <div>
    <p><strong>注文日:</strong> <%#= @order.created_at.strftime('%Y-%m-%d') %></p>
    <p><strong>配送先:</strong> <%#= @order.delivery_address %></p>
    <p><strong>ステータス:</strong> <%#= @order.status %></p>
    <p><strong>支払金額:</strong> <%#= number_to_currency(@order.total_price) %></p>
  </div>

  <h2>注文商品</h2>
  <table class="table">
    <thead>
      <tr>
        <th>商品名</th>
        <th>数量</th>
        <th>価格</th>
      </tr>
    </thead>
    <tbody>
      <%# @order_details.each do |detail| %>
        <tr>
          <td><%#= detail.item.name %></td>
          <td><%#= detail.amount %></td>
          <td><%#= number_to_currency(detail.price) %></td>
        </tr>
      <%# end %>
    </tbody>
  </table>

  <%#= link_to '戻る', public_orders_path, class: 'btn btn-secondary' %>
<%# else %>
  <p>注文が見つかりません。</p>
<%# end %>