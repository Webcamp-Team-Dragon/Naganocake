<h1>Public::Orders#confirm, 注文情報確認画面</h1>
<p>Find me in app/views/public/orders/confirm.html.erb</p>

<% shipping_cost_ex = 0 %>

<% @cart_items.each do |f| %>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= f.item.name %></td>
      <td><%= f.item.price %></td>
      <td><%= f.amount %></td>
      <td><%= f.item.price * f.amount %></td>
      <% shipping_cost_ex += f.item.price * f.amount %>
    </tr>
  </tbody>
</table>
<% end %>

<%= form_with model: @order, url: orders_confirm_path do |f|%>
  <table>
    <tr>
      <th>送料</th>
      <th><%= @order.shipping_cost %></th>
    </tr>
    <tr>
      <th>商品合計</th>
      <th><%= shipping_cost_ex %></th>
    </tr>
    <% total_payment = @order.shipping_cost + shipping_cost_ex %>
    <tr>
      <th>請求金額</th>
      <th><%= total_payment %></th>
    </tr>
  </table>
  
  <b>支払い方法</b>
  <p><%= Order.payment_methods_i18n[@order.payment_method] %></p>
  
  <b>お届け先</b>
  
  <%= params[:order][:address] %>
  
  <p><%= @customer.last_name + @customer.first_name %></p>
<% end %>