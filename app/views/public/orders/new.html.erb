<div class="container mt-3">
  <%= form_with model: @order, url: orders_confirm_path, method: :get do |f|  %>
  <h3>注文情報入力</h3>

<!--支払方法選択欄-->
  <h5><strong>支払方法</strong></h5>
  <div>
    <%= f.radio_button :pay_method, 0, checked: true, class: 'ml-4' %>
    <%= f.label :pay_method, "クレジットカード" %><br>
  </div>
  <div>
    <%= f.radio_button :pay_method, 1, class: 'ml-4'  %>
    <%= f.label :pay_method, "銀行振込" %>
  </div>
<!--お届け先選択欄-->
  <h5><strong>お届け先</strong></h5>
  <div>
    <%= f.radio_button :address, current_customer.address, checked: true, class: 'ml-4' %>
    <%= f.label :address, "ご自身の住所" %>
    <div class="ml-5">〒<%= current_customer.postal_code + "　" + current_customer.address %></div>
    <div class="ml-5"><%= current_customer.last_name + current_customer.first_name %></div>
  </div>
  <div>
    <%= f.radio_button :address, [:registered_address], class: 'ml-4' %>
    <%= f.label :address, "登録済住所から選択" %>
  </div>
  <div class='ml-5'><%= f.collection_select :address, @addresses, :id, :full_address_with_postal_and_name %></div>
<!--新しいお届け先の登録欄-->
  <div>
    <%= f.radio_button :address, "new_address", class: 'ml-4' %>
    <%= f.label :address, "新しいお届け先" %>
  </div>

  <div class="row ml-4">
    <div class="col-md-3">
      <p>郵便番号(ハイフンなし)</p>
    </div>
    <div class="col-md-4">
      <%= f.text_field :new_postal_code, class: 'form-control' %>
    </div>
  </div>
  <div class="row ml-4">
    <div class="col-md-3">
      <p>住所</p>
    </div>
    <div class="col-md-4">
      <%= f.text_field :new_address, class: 'form-control' %>
    </div>
  </div>
  <div class="row ml-4">
    <div class="col-md-3">
      <p>宛名</p>
    </div>
    <div class="col-md-4">
      <%= f.text_field :new_name, class: 'form-control' %>
    </div>
  </div>

<div class="d-flex justify-content-center my-2">
  <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
</div>
<% end %>

