<div class="container mt-3">
  <%= form_with model: @order, url: orders_confirm_path, method: :get do |f|  %>
    <h3>注文情報入力</h3>
    <div>
      <%= f.radio_button :pay_method, 0, checked: true %>
      <%= f.label :pay_method, "クレジットカード" %>
    </div>
    <div>
      <%= f.radio_button :pay_method, 1 %>
      <%= f.label :pay_method, "銀行振込" %>
    </div>


    <h3>お届け先</h3>

    <!--, Address.where(customer_id: current_customer.id).pluck(:id).first-->
    <div>
      <%= f.radio_button :address, current_customer.address, checked: true %>
      <%= f.label :address, "ご自身の住所" %>
    </div>
    <div>
      〒<%= current_customer.postal_code + "　" + current_customer.address %>
      <%= current_customer.last_name + current_customer.first_name %>
    </div>
    <% if @addresses.any? %>
      <div>
        <%= f.label :address, "登録済住所から選択" %>
        <%= f.collection_select :address, @addresses, :id, :address, { prompt: "住所を選択" } %>
      </div>
    <% else %>
      <div>登録されている住所はありません。</div>
    <% end %>
  <% end %>
</div>