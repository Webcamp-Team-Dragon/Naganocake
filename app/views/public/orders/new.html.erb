<h3>注文情報入力</h3>
<%= form_with model: @order, url: orders_confirm_path, method: :get do |f|  %>
<div class="container mt-3">
    <h3>支払方法</h3>
    <div>
      <%= f.radio_button :payment_method, 0, checked: true %>
      <%= f.label :payment_method, "クレジットカード" %>
    </div>
    <div>
      <%= f.radio_button :payment_method, 1 %>
      <%= f.label :payment_method, "銀行振込" %>
    </div>









    <h3>お届け先</h3>
    <div>
      <%= f.radio_button :address, [current_customer.postal_code, "　", current_customer.address, "　", current_customer.last_name, current_customer.first_name ], checked: true %>
      <%= f.label :address, "ご自身の住所" %>
    </div>
    <div>
      <%= f.radio_button :address, :registered_address %>
      <%= f.label :address, "登録済住所から選択" %>
      <%= f.select :address, @addresses.map { |a| [a.name] } %>
      <%= hidden_field_tag "order[address_id]" %>
    </div>
  </div>







<div class="col-lg-5"><h4>お届け先</h4></div>
			<div class="col-xs-offset-1 col-lg-8">
				<%= f.radio_button :address,[ current_customer.postal_code , " ", current_customer.address ], class:"pull-left"%>
				<%= f.label :address, "ご自身の住所",{ class:"pull-left" ,style: "padding-left: 5px;"} %>
			</div>
			<div class="col-lg-12">
				<p>〒<%= current_customer.postal_code%> <%=current_customer.address %></p>
			</div>
			<div class="col-xs-offset-1 col-lg-8">
				<%= f.radio_button :address, [:registered_address], class:"pull-left" %>
				<%= f.label :address, "登録済住所から選択", { class:"pull-left" ,style: "padding-left: 5px;"} %>
			</div>
			<div class="col-xs-offset-1 col-lg-8">
				<%= f.select :registered_address, @addresses.map { |m| [m.postal_code+" "+m.address+" "] },include_blank: " 登録してある配送先住所から選択" ,class: "pull-left"%>
			</div>
			<div class="col-xs-offset-1 col-lg-10">
				<%= f.radio_button :address, [:new], class:"pull-left" %>








    <div>
      <%= f.radio_button :address, "new_address" %>
      <%= f.label :address, "新しいお届け先" %>
    </div>
    <div>
      <p>郵便番号(ハイフンなし)</p>
      <%= f.text_field :new_address_postal_code %>
    </div>
    <div>
      <p>住所</p>
      <%= f.text_field :new_address %>
    </div>
    <div>
      <p>宛名</p>
      <%= f.text_field :new_name %>
    </div>
    <%= f.submit "確認画面へ進む" %>

  </div>
    <% end %>