<h3>注文情報入力</h3>
<%= form_with model: @order, url: orders_confirm_path, method: :get do |f| %>
  <h3>支払方法</h3>
  <div>
    <%= f.radio_button :payment_method, 0, checked: true %>
    <%= f.label :payment_method, "クレジットカード" %>
  </div>
  <div>
    <%= f.radio_button :payment_method, 1 %>
    <%= f.label :payment_method, "銀行振込" %>
  </div>

  <h3>お届け先</h3>
  <div>
    <%= f.radio_button :shipping_address, :my_address, checked: true %>
    <%= f.label :shipping_address, "ご自身の住所" %>
    <p>〒<%= current_customer.postal_code %>　<%= current_customer.address %></p>
    <p><%= current_customer.last_name + current_customer.first_name %></p>
  </div>
  <div>
    <%= f.radio_button :shipping_address, :select_address %>
    <%= f.label :shipping_address, "登録済住所から選択" %>
    <%= f.select :selected_address, @addresses.map { |a| [a.address, a.id] }, include_blank: "配送先を選択してください" %>
  </div>
    <%= f.radio_button :shipping_address, :new_address %>
    <%= f.label :shipping_address, "新しいお届け先" %>
    <%= fields_for "new_address[]", Address.new do |address_f| %>
      <table>
        <tbody>
          <tr>
            <td>郵便番号(ハイフンなし)</td>
            <td><%= address_f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= address_f.text_field :address %></td>
          </tr>
          <tr>
            <td>宛名</td>
            <td><%= address_f.text_field :name %></td>
          </tr>
        </tbody>
      </table>
      <%= f.submit "確認画面へ進む" %>
  <% end %>
<% end %>