<div class="container">
  <h1>注文履歴</h1>
  <table class="table table-bordered">
    <thead style="background-color: #f5f5f5;">
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <%# @orders.each do |order| %>
        <tr>
          <!--注文日-->
          <td><%#= order.created_at.strftime('%Y-%m-%d') %></td>
          <!--配送先-->
          <td><%#= order.address %></td>
          <!--注文商品-->
          <td>
            <ul>
              <%# order.item_id.each do |item| %>
                <li><%#= detail.item.name %></li>
              <%# end %>
            </ul>
          </td>
          <!--支払金額-->
          <td><%#= number_to_currency(orderdetails.price, delimiter: ',', unit:'', precision: 0) %></td>
          <!--ステータス-->
          <td><%#= orderdetails.making_status %></td>
          <!--詳細リンク-->
          <td><%#= link_to '詳細', order_path(@order), class: 'btn btn-primary' %></td>
        </tr>
      <%# end %>
    </tbody>
  </table>
</div>