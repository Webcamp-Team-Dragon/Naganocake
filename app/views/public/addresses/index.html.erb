<h3>配送先登録 / 一覧</h3>

<%= form_with model: @address, url: addresses_path do |f| %>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td>
          <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
        </td>
        <td>
        </td>
        <td><%= f.text_field :postal_code %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td>
          <%= f.label :address, "住所" %>
        </td>
        <td></td>
        <td>
          <%= f.text_field :address %>
        </td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td>
          <%= f.label :name, "宛名" %>
        </td>
        <td></td>
        <td>
          <%= f.text_field :name %>
        </td>
        <td></td>
        <td>
          <%= f.submit "新規登録" %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th>(編集と削除ボタン)</th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |f| %>
      <tr>
        <td><%= f.postal_code %></td>
        <td><%= f.address %></td>
        <td><%= f.name %></td>
        <td>
          <%= link_to "編集する", edit_address_path(f) %>
          <%= link_to "削除する", address_path(f), method: :delete, data: { confirm: '本当に消しますか？' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
